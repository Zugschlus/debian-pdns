#!/bin/sh
# postinst script for pdns-backend-mysql
#
# see: dh_installdeb(1)

set -e

# Execute dbconfig-common
. /usr/share/debconf/confmodule
. /usr/share/dbconfig-common/dpkg/postinst.mysql
dbc_first_version="3.0-1"
dbc_mysql_createdb_encoding="UTF8"
dbc_generate_include_args="-o template_infile=/usr/share/doc/pdns-backend-mysql/examples/pdns.local.gmysql"
dbc_generate_include=template:/etc/powerdns/pdns.d/pdns.local.gmysql
dbc_generate_include_owner=pdns
dbc_generate_include_perms=0640
dbc_go pdns-backend-mysql $@

# Activate trigger
dpkg-trigger pdns-server

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

